<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} - Architecture</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/mermaid@10/dist/mermaid.min.js"></script>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        body { font-family: 'Inter', sans-serif; }
        .gradient-bg { background: linear-gradient(135deg, {{ theme.gradient_start }} 0%, {{ theme.gradient_end }} 100%); }
        .node-router { background: linear-gradient(135deg, #ec4899, #db2777); }
        .node-llm { background: linear-gradient(135deg, #a78bfa, #8b5cf6); }
        .node-interrupt { background: linear-gradient(135deg, #fbbf24, #d97706); }
        .node-python { background: linear-gradient(135deg, #10b981, #059669); }
        .node-subgraph { background: linear-gradient(135deg, #06b6d4, #0891b2); }
        .node-tool { background: linear-gradient(135deg, #10b981, #059669); }
        .node-agent { background: linear-gradient(135deg, #3b82f6, #1e3a8a); }
        .node-passthrough { background: linear-gradient(135deg, #9ca3af, #6b7280); }
        .node-map { background: linear-gradient(135deg, #f97316, #ea580c); }
        .mermaid-container { background: {{ theme.bg_secondary }}; border-radius: 1rem; padding: 2rem; }
        .mermaid { display: flex; justify-content: center; }
    </style>
    <script>
        mermaid.initialize({
            startOnLoad: true,
            theme: '{{ theme_name }}',
            flowchart: { curve: 'basis', padding: 20 }
        });
    </script>
</head>
<body style="background: {{ theme.bg_primary }}; color: {{ theme.text_primary }};">

    <!-- Hero -->
    <section class="gradient-bg min-h-[60vh] flex items-center justify-center relative overflow-hidden">
        <div class="absolute inset-0 opacity-10">
            <div class="absolute top-20 left-20 w-64 h-64 bg-blue-500 rounded-full blur-3xl"></div>
            <div class="absolute bottom-20 right-20 w-96 h-96 bg-purple-500 rounded-full blur-3xl"></div>
        </div>
        <div class="text-center z-10 px-6 py-20">
            {% if analysis.tagline %}
            <div class="text-sm uppercase tracking-widest text-blue-400 mb-4">{{ analysis.tagline }}</div>
            {% endif %}
            <h1 class="text-5xl md:text-7xl font-bold mb-6">
                <span class="text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-400">{{ title }}</span>
            </h1>
            <p class="text-xl max-w-2xl mx-auto mb-8" style="color: {{ theme.text_secondary }};">
                {{ analysis.summary | default('') }}
            </p>
            
            {% if analysis.features %}
            <div class="mt-12 grid md:grid-cols-3 gap-6 max-w-4xl mx-auto">
                {% for f in analysis.features %}
                <div class="backdrop-blur rounded-xl p-6 border" style="background: {{ theme.bg_card }}; border-color: {{ theme.border }};">
                    <div class="text-3xl mb-3">{{ f.emoji }}</div>
                    <h3 class="font-semibold text-lg mb-2">{{ f.title }}</h3>
                    <p class="text-sm" style="color: {{ theme.text_secondary }};">{{ f.description }}</p>
                </div>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </section>

    <!-- Diagram -->
    {% if mermaid_code %}
    <section class="py-16 px-6" style="background: {{ theme.bg_primary }};">
        <div class="max-w-5xl mx-auto">
            <h2 class="text-3xl font-bold text-center mb-8">Architecture</h2>
            <div class="mermaid-container">
                <pre class="mermaid">{{ mermaid_code }}</pre>
            </div>
        </div>
    </section>
    {% endif %}

    <!-- Nodes -->
    {% if analysis.nodes %}
    <section class="py-16 px-6" style="background: {{ theme.bg_secondary }};">
        <div class="max-w-5xl mx-auto">
            <h2 class="text-3xl font-bold text-center mb-8">Pipeline Nodes</h2>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-4">
                {% for node in analysis.nodes %}
                <div class="rounded-xl p-5 border" style="background: {{ theme.bg_card }}; border-color: {{ theme.border }};">
                    <div class="flex items-center gap-3 mb-3">
                        <div class="w-10 h-10 rounded-lg flex items-center justify-center text-white text-xl node-{{ node.type | default('python') }}">
                            {{ node.emoji | default('ðŸ“¦') }}
                        </div>
                        <div>
                            <h4 class="font-bold">{{ node.name }}</h4>
                            <span class="text-xs px-2 py-0.5 rounded" style="background: {{ theme.bg_primary }};">{{ node.type | default('python') }}</span>
                        </div>
                    </div>
                    <p class="text-sm" style="color: {{ theme.text_secondary }};">{{ node.description | default('') }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    {% endif %}

    <!-- Footer -->
    <footer class="py-6 px-6 border-t text-center text-sm" style="background: {{ theme.bg_primary }}; border-color: {{ theme.border }}; color: {{ theme.text_secondary }};">
        Generated with yamlgraph beautify
    </footer>

</body>
</html>
